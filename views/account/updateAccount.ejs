<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> 
    
    <%- messages() %>
    
    <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>
        
    <section class = "form-container"><p>All fields are required.</p>
        <form id="registerForm" action="/account/updateAccountReally" method="POST">
            <fieldset>
                <label for="account_firstname">First name:</label>
                <input type="text" class="form-field" id="firstname" name="account_firstname" required value="<%= locals.account_firstname %>">
                <label for="account_lastname">Last name:</label>
                <input type="text" class="form-field" id="lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
                <label for="account_email">Email address:</label>
                <input type="email" class="form-field" id="email" name="account_email" required value="<%= locals.account_email %>" placeholder="Enter a valid email address">
                <br>
                <button type="submit" class="form-button">Update Account</button>  
                <input type="hidden" name="account_password" <% if(locals.account_password) { %>
                    value="<%= locals.account_password %>" <% } %>>    
                <input type="hidden" name="accountId" <% if(locals.accountId) { %>
                    value="<%= locals.accountId %>" <% } %>>       
            </fieldset>
        </form>
    </section>
    <script src="/js/script.js"></script>