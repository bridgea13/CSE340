<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> 
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<section class = "form-container">
    <form class = "form" id="loginForm" action="/account/login" method="POST">
        <fieldset>
            <br>
            <label for="account_email">Email:</label>
            <input type="email" class="form-field" id="email" name="account_email" required value="<%= locals.account_email %>" placeholder="Enter a valid email address">
            <br>
            <label for="account_password">Password:</label>
            <input type="password" class="form-field" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <div><i>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>
            <br>
            <button type="submit" class="form-button">Login</button>
            <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
        </fieldset>
    </form>
</section>
<script src="/js/script.js"></script>